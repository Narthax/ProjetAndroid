<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yoric.projet.MainActivity">

    <EditText
        android:id="@+id/et_recherche"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/et_recherche"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_film"
            android:text="@string/bt_film"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/bt_serie"
            android:text="@string/bt_serie"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/bt_personne"
            android:text="@string/bt_personne"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_rechercher"
        android:text="@string/bt_recherhcer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:id="@+id/fl_main_fragment_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></FrameLayout>



    <Button
        android:id="@+id/bt_home"
        android:text="@string/home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
