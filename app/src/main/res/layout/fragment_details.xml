<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/tv_details_titre"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="40dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/iv_details_image"
            android:layout_width="170dp"
            android:layout_height="220dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="220dp">

            <TextView
                android:id="@+id/tv_details_genre"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="55dp" />
            <TextView
                android:id="@+id/tv_details_date"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="55dp" />
            <TextView
                android:id="@+id/bt_details_Note"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="55dp" />
            <Button
                android:id="@+id/bt_details_bandeAnnonce"
                android:text="@string/Search_trailer"
                android:layout_width="match_parent"
                android:layout_height="55dp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_details_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_margin="10dp"
        android:gravity="center_vertical"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_details_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>