<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_details_titre"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_details_image"
            android:layout_width="150dp"
            android:layout_height="200dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <TextView
                android:id="@+id/tv_details_genre"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="50dp" />
            <TextView
                android:id="@+id/tv_details_date"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="50dp" />
            <Button
                android:id="@+id/bt_details_bandeAnnonce"
                android:text="@string/Search_trailer"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <RatingBar
                android:id="@+id/rb_details_ratinbar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:numStars="5"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:stepSize="0.25" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_details_description"
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_height="90dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_details_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>